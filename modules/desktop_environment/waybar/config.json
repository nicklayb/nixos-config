{
	"layer": "top",
	"modules-left": ["image#logo", "hyprland/submap", "hyprland/window"],
	"modules-center": ["hyprland/workspaces", "task"],
	"modules-right": ["group/group-backlight", "pulseaudio", "network", "group/group-perf", "battery", "clock"],
	"image#logo": {
		"path": "/home/nboisvert/.config/waybar/nixos.svg",
		"size": 20,
		"on-double-click": "xdg-open https://search.nixos.org/packages"
	},
	"pulseaudio": {
		"tooltip": false,
		"scroll-step": 0.3,
		"format": "{icon} {volume}<span alpha=\"60%\">%</span>",
		"format-muted": "<span color=\"#ff0040\">󰖁 </span> <span alpha=\"50%\">{volume}</span><span alpha=\"30%\">%</span>",
		"format-icons": {
			"default": [
				"<span color=\"#c7564a\"> </span>", 
				"<span color=\"#c7b84a\"> </span>", 
				"<span color=\"#80c74a\"> </span>"
			]
		},
		"on-double-click": "pavucontrol"
	},
	"group/group-perf": {
		"orientation": "horizontal",
		"drawer": {},
		"modules": [
			"memory",
			"cpu",
			"disk",
			"bluetooth"
		]
	},
	"group/group-backlight": {
		"orientation": "horizontal",
		"drawer": {},
		"modules": [
			"backlight",
			"backlight/slider"
		]
	},
	"network": {
		"tooltip": false,
		"format-wifi": "<span color=\"#a4c74a\"></span>  {essid}",
		"format-ethernet": "<span color=\"#a4c74a\"> </span> {ipaddr}",
		"family": "ipv4",
		"on-double-click": "alacritty -e nmtui"
	},
	"disk": {
		"format": "<span color=\"#9c42f5\">󱛟</span> {percentage_free}%"
	},
	"cpu": {
		"tooltip": false,
		"format": "<span color=\"#674ac7\"></span> {}<span alpha=\"60%\">%</span>",
		"on-double-click": "alacritty -e btop"
	},
	"memory": {
		"tooltip": false,
		"format": "<span color=\"#4ac797\"> </span>{}<span alpha=\"60%\">%</span>",
		"on-double-click": "alacritty -e btop"
	},
	"backlight": {
		"format": "<span color=\"#f5427e\">{icon}</span> {percent}%",
		"format-icons": [ "󰪞", "󰪟", "󰪠", "󰪡", "󰪢", "󰪣", "󰪤", "󰪥" ]
	},
	"backlight/slider": {
		"min": 15
	},
	"clock": {
    "format": "<span color=\"#f542bf\"></span> {:%H:%M}",
    "format-alt": "<span color=\"#f542bf\"></span> {:%A, %B %d, %Y (%R)}",
    "tooltip-format": "<tt>{calendar}</tt>",
    "smooth-scrolling-threshold": 2.5,
    "calendar": {
      "mode"          : "month",
      "mode-mon-col"  : 3,
      "weeks-pos"     : "right",
      "on-scroll"     : 1,
      "format": {
        "months":     "<span color='#ffead3'><b>{}</b></span>",
        "days":       "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
        "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    },
    "actions":  {
      "on-click-right": "mode",
      "on-double-click": "shift_reset",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
	"battery": {
		"format-charging": "<span color=\"#d742f5\"></span> {capacity}<span alpha=\"60%\">%</span>",
		"format-full": "<span color=\"#5dc74a\"></span> {capacity}<span alpha=\"60%\">%</span>",
	  "format": "{icon} {capacity}<span alpha=\"60%\">%</span>",
	  "format-icons": [
	  	"<span color=\"#ff6699\"></span>",
	  	"<span color=\"#c7844a\"></span>",
	  	"<span color=\"#c7b84a\"></span>",
	  	"<span color=\"#aac74a\"></span>",
	  	"<span color=\"#5dc74a\"></span>"
	  ],
		"states": {
      "warning": 25,
      "critical": 10
		}
	},
	"bluetooth": {
		"format": "<span color=\"#4a82c7\"></span>",
		"format-connected": "<span color=\"#4a82c7\"></span> {num_connections}",
		"on-click": "blueman-manager"
	}
}
